{
  "include": ["./**/*.ts"],

  "compilerOptions": {
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "outDir": "../build/app",
    "esModuleInterop": true,
    "noUnusedLocals": true,

    "importHelpers": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "sourceMap": false,
    "checkJs": false,
    "allowJs": false,
    "baseUrl": ".",
    "strict": true,

    "paths": {
      "*": ["node_modules/*"]
    },

    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
