{
  "compilerOptions": {
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "noImplicitAny": true,

    "outDir": "../build",
    "module": "commonjs",
    "sourceMap": false,
    "checkJs": false,
    "allowJs": false,
    "baseUrl": ".",
    "strict": true,

    "paths": {
      "*": ["node_modules/*"]
    },

    "typeRoots": [
      "node_modules/@types"
    ]
  },

  "include": ["./**/*.ts"]
}
