{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "noImplicitAny": true,

    "module": "esnext",
    "target": "es2019",
    "sourceMap": true,
    "jsx": "preserve",
    "checkJs": true,
    "allowJs": true,
    "baseUrl": ".",
    "strict": true,

    "typeRoots": ["node_modules/@types"],
    "types": ["svelte", "jest", "node"],

    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@/*": ["src/*"]
    },

    "lib": [
      "esnext",
      "dom"
    ]
  },

  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.svelte",
    "tests/**/*.tsx",
    "tests/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "public",
    "build",
    "app"
  ]
}