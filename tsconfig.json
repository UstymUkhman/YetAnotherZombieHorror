{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "noImplicitAny": true,

    "module": "esnext",
    "target": "es2019",
    "sourceMap": true,
    "jsx": "preserve",
    "checkJs": true,
    "allowJs": true,
    "baseUrl": ".",
    "strict": true,

    "typeRoots": ["node_modules/@types"],
    "types": ["svelte", "jest"],

    "paths": {
      "@postprocessing/*": ["node_modules/three/examples/jsm/postprocessing/*"],
      "@controls/*": ["node_modules/three/examples/jsm/controls/*"],
      "@shaders/*": ["node_modules/three/examples/jsm/shaders/*"],
      "@loaders/*": ["node_modules/three/examples/jsm/loaders/*"],
      "@utils/*": ["node_modules/three/examples/jsm/utils/*"],
      "@three/*": ["node_modules/three/src/*"],
      "@/components/*": ["src/components/*"],
      "@/*": ["src/*"]
    },

    "lib": [
      "esnext",
      "dom"
    ]
  },

  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],

  "exclude": [
    "node_modules",
    "public",
    "build",
    "app"
  ]
}